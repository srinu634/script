declare -i x=0

#Scan eth0

sudo iwlist eth0 scanning > eth0.in
if [ $? -eq 0 ]
then
        echo "eth0 supports scanning"
fi

#Scan wlan0

sudo iwlist wlan0 scanning > wlan0.in
if [ $? -eq 0  ]
then
        echo "wlan0 supports scanning"
fi




